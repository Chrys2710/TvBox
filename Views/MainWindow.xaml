<catel:Window x:Class="TvBox.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:catel="http://schemas.catelproject.com"
              ResizeMode="CanResize" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized" Topmost="True">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
     <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="{Binding Title}" />
        <Label Grid.Row="1" Grid.Column="0" Background="red" Content="Here goes your real content" />
        <Button Content="Close tab" HorizontalAlignment="Left" Margin="10,73,0,-43" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
    
</catel:Window>
